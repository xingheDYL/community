<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyl.community.mapper.LoginTicketMapper">

    <resultMap id="BaseResultMap" type="com.dyl.community.entity.LoginTicket">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="ticket" column="ticket" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="expired" column="expired" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,ticket,
        status,expired
    </sql>
    <insert id="insertSelective">
        insert into login_ticket
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="ticket != null">ticket,</if>
            <if test="status != null">status,</if>
            <if test="expired != null">expired,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId,jdbcType=INTEGER},</if>
            <if test="ticket != null">#{ticket,jdbcType=VARCHAR},</if>
            <if test="status != null">#{status,jdbcType=INTEGER},</if>
            <if test="expired != null">#{expired,jdbcType=TIMESTAMP},</if>
        </trim>
    </insert>
    <select id="selectByTicket" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from login_ticket
        where
        ticket = #{ticket,jdbcType=VARCHAR}
    </select>
</mapper>
